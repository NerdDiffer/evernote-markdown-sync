{
  "name": "evernote-markdown-sync",
  "version": "0.0.0",
  "description": "Write, edit markdown. Synchronize with Evernote",
  "main": "server/index.js",
  "scripts": {
    "prestart": "npm install",
    "postinstall": "curl -s https://raw.githubusercontent.com/hackreactor-labs/pomander/master/bin/install | bash",
    "start": "npm run front-end & npm run back-end",
    "front-end": "webpack --watch",
    "back-end": "nodemon server/index.js",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:NerdDiffer/evernote-markdown-sync.git"
  },
  "keywords": [
    "evernote",
    "markdown"
  ],
  "author": "Rafael Espinoza rafael@rafaelespinoza.com",
  "license": "ISC",
  "dependencies": {
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "body-parser": "^1.15.2",
    "dotenv": "^2.0.0",
    "evernote": "^1.25.82",
    "express": "^4.14.0",
    "json-loader": "^0.5.4",
    "morgan": "^1.7.0",
    "react": "^15.3.0",
    "react-codemirror": "^0.2.6",
    "react-dom": "^15.3.0",
    "react-markdown": "^2.4.2",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "nodemon": "^1.10.0"
  },
  "ava": {
    "files": [
      "tests/**/*_test.js"
    ],
    "source": [
      "{server,client}/**/*.{js,jsx}",
      "!client/dist/**/*"
    ],
    "concurrency": 5,
    "failFast": false,
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
